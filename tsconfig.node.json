{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "types": ["node", "estree"],
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["ESNext"]
  },
  "include": ["vite.config.ts", "scripts/**/*.ts"]
}
